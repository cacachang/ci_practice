<%= form_with(model: dynamic_form, class: "contents") do |form| %>
  <% if dynamic_form.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(dynamic_form.errors.count, "error") %> prohibited this dynamic_form from being saved:</h2>

      <ul class="list-disc ml-6">
        <% dynamic_form.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dynamic_form.errors[:name].none?, "border-red-400 focus:outline-red-600": dynamic_form.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dynamic_form.errors[:description].none?, "border-red-400 focus:outline-red-600": dynamic_form.errors[:description].any?}] %>
  </div>

  <div>
    <%= form.fields_for :dynamic_columns do |a| %>
      <div>
        <%= a.label :column_type %>
        <%= a.text_field :column_type %>
      </div>

      <div>
        <%= a.label :required %>
        <%= a.check_box :required %>
      </div>

      <div>
        <%= a.label :default_value %>
        <%= a.text_field :default_value %>
      </div>
    <% end %>
  </div>
