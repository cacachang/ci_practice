<%= form_with(model: dynamic_column, class: "contents") do |form| %>
  <% if dynamic_column.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(dynamic_column.errors.count, "error") %> prohibited this dynamic_column from being saved:</h2>

      <ul class="list-disc ml-6">
        <% dynamic_column.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :type %>
    <%= form.text_field :type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dynamic_column.errors[:type].none?, "border-red-400 focus:outline-red-600": dynamic_column.errors[:type].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :required %>
    <%= form.checkbox :required, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": dynamic_column.errors[:required].none?, "border-red-400 focus:outline-red-600": dynamic_column.errors[:required].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :default_value %>
    <%= form.text_field :default_value, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dynamic_column.errors[:default_value].none?, "border-red-400 focus:outline-red-600": dynamic_column.errors[:default_value].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :dynamic_form_id %>
    <%= form.text_field :dynamic_form_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dynamic_column.errors[:dynamic_form_id].none?, "border-red-400 focus:outline-red-600": dynamic_column.errors[:dynamic_form_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
